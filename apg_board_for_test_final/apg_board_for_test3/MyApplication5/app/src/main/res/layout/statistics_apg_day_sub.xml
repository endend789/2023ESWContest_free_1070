<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <!--    // 상단 고정-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"

        android:background="@drawable/edit_round"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/todo"
            android:src="@drawable/first" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="269dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:text="혈관 탄성도 통계 자료"
            android:textSize="20sp"
            android:fontFamily="@font/kalam_regular"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/edit_round"
            android:gravity="center"
            android:orientation="horizontal">

    <TextView
        android:id="@+id/average"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="혈관 탄성도 평균 수치는"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/kalam_regular" />

            <TextView
                android:id="@+id/average1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="( 혈관 탄성도 )"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/kalam_regular"/>

            <TextView
                android:id="@+id/average2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="입니다."
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/kalam_regular" />
        </LinearLayout>


    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="혈관 탄성도 세부 분석"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:fontFamily="@font/kalam_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_round"
        android:gravity="left"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_round"
            android:orientation="vertical">

            <TextView
                android:id="@+id/age"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text="주의 필요"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="7dp"
                android:text="50대           (-0.52 | -0.83) "
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="3dp"
                android:text="40대           (-0.84 | -1.02) "
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="3dp"
                android:text="30대           (-1.03 | -1.24) "
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="3dp"
                android:text="20대           (-1.25 | -1.44) "
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="혈관 건강"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="365dp"
                android:layout_height="200dp"
                android:layout_marginLeft="27dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/buck8" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/Chart1"
                android:layout_width="405dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp"></com.github.mikephil.charting.charts.LineChart>
        </RelativeLayout>

        <ImageView
            android:id="@+id/ageimage"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/age2" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_margin="5dp"
            android:background="@drawable/edit"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ok"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:background="@color/gray"
                android:text="확인"
                android:textSize="15sp"
                android:textColor="#000000"
                android:fontFamily="@font/kalam_regular" />
        </LinearLayout>

</LinearLayout>
